<div class="container-fluid">
  <div>
    <h1>Eat Da Burger!</h1>
  </div>
</div>
<div class= "row-fluid">
  <div class="col-md-6">
    Not Devoured
    {{#each burger_data}}
      {{#unless this.devoured}}
      <div style="border-style: solid; width: 180px; margin-bottom: 5px; padding: 6px; background-color:#FFEABF; color: white;">      
        <div>
          <pre style="background-color:#4F351B; color:white; margin-bottom: 0px;">{{this.id}}. {{this.burger_name}}</pre>
        </div>
      </div>
      <div style="margin-bottom: 15px;">
        <form method="POST" action="/update?_method=PUT">
          <input type="hidden" type="text" name="id" value={{this.id}}>
          <button type="submit" class="btn btn-default">Devour!</button>
        </form>
      </div>
      {{/unless}}
    {{/each}}
  </div>
  <div class="col-md-6">
    Devoured
    {{#each burger_data}}
      {{#if this.devoured}}
      <div style="border-style: solid; width: 180px; margin-bottom: 5px; padding: 6px; background-color:#FFEABF; color: white;">      
        <div>
          <pre style="background-color:#4F351B; color:white; margin-bottom: 0px;">{{this.id}}. {{this.burger_name}}</pre>
        </div>
      </div>
      <div style="margin-bottom: 15px;">
        <form method="POST" action="/update?_method=PUT">
          <input type="hidden" type="text" name="id" value={{this.id}}>
          <button type="submit" class="btn btn-default">Devour!</button>
        </form>
      </div>
      {{/if}}
    {{/each}}
  </div>
</div>